{
    "apps": [
        {
            "name": "ui/admin",
            "cwd": "./ui/admin",
            "script": "npm",
            "args": "run dev"
        },

        {
            "name": "ui/store",
            "cwd": "./ui/store",
            "script": "node",
            "args": "app.mjs"
        },

        {
            "name": "node/apps/api",
            "cwd": "./node/apps/api",
